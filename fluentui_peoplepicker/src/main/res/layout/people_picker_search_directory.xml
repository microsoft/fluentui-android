<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/people_picker_search_directory_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ms_ripple_transparent_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="@integer/fluentui_people_picker_search_directory_max_lines"
        android:minHeight="@dimen/fluentui_people_picker_search_directory_min_height"
        android:paddingStart="@dimen/fluentui_people_picker_search_directory_padding_horizontal"
        android:paddingTop="@dimen/fluentui_people_picker_search_directory_padding_vertical"
        android:paddingEnd="@dimen/fluentui_people_picker_search_directory_padding_horizontal"
        android:paddingBottom="@dimen/fluentui_people_picker_search_directory_padding_vertical"
        android:text="@string/people_picker_search_directory"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.FluentUI.PeoplePickerSearchDirectoryButton" />

</LinearLayout>