<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/snackbar_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/fluentui_min_touch_size">

    <TextView
        android:id="@+id/snackbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="@integer/fluentui_snackbar_max_lines"
        android:textAppearance="@style/TextAppearance.FluentUI.SnackbarText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/snackbar_action"
        style="?attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:minWidth="@dimen/fluentui_snackbar_action_min_size"
        android:minHeight="@dimen/fluentui_snackbar_action_min_size"
        android:visibility="gone" />

</RelativeLayout>