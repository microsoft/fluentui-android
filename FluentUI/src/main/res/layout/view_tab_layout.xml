<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tab_layout_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fluentui_tab_height"
    android:background="?attr/fluentuiTabContainerBackgroundColor">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        app:tabContentStart="@dimen/fluentui_tab_content_start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabMode="fixed"
        app:tabRippleColor="@null"
        app:tabIndicatorHeight="@dimen/fluentui_tab_indicator_height"
        app:tabGravity="fill"
        app:tabMaxWidth="0dp"
        app:tabTextAppearance="@style/TextAppearance.FluentUI.Tab"
        app:tabBackground="@drawable/tab_layout_selector" />

</LinearLayout>
