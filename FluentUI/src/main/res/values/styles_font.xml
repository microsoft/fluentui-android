<resources>

    <!-- *** FluentUI Theme *** -->

    <style name="TextAppearance.FluentUI" parent="TextAppearance.AppCompat" />

    <style name="TextAppearance.FluentUI.Headline">
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">"sans-serif-light"</item>
    </style>

    <style name="TextAppearance.FluentUI.Title1">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.FluentUI.Title2">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.FluentUI.Heading">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.FluentUI.SubHeading1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.FluentUI.SubHeading2">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.FluentUI.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <style name="TextAppearance.FluentUI.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <style name="TextAppearance.FluentUI.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">"sans-serif"</item>
    </style>

    <!-- *** FluentUI Semantic Styles *** -->

    <!--BottomNavigation-->
    <style name="TextAppearance.FluentUI.BottomNavigation.Inactive" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/fluentuiBottomNavigationForegroundInactiveColor</item>
    </style>
    <style name="TextAppearance.FluentUI.BottomNavigation.Active" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/fluentuiBottomNavigationForegroundActiveColor</item>
    </style>

    <!--Button-->
    <style name="TextAppearance.FluentUI.Button" parent="TextAppearance.FluentUI.Body2">
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.FluentUI.Button.Borderless">
        <item name="android:textColor">@color/button_text_borderless</item>
    </style>

    <!--Calendar-->
    <!--calendar_week_day_text_selector sets the colors for these-->
    <style name="TextAppearance.FluentUI.CalendarDay" parent="TextAppearance.FluentUI.SubHeading1">
        <item name="android:textColor">@null</item>
    </style>
    <style name="TextAppearance.FluentUI.CalendarDay2" parent="TextAppearance.FluentUI.SubHeading2">
        <item name="android:textColor">@null</item>
    </style>
    <style name="TextAppearance.FluentUI.WeekDayHeader" parent="TextAppearance.FluentUI.Body2">
        <item name="android:textColor">@null</item>
    </style>

    <!--ListItem-->
    <style name="TextAppearance.FluentUI.ListItemTitle" parent="TextAppearance.FluentUI.SubHeading1">
        <item name="android:textColor">?attr/fluentuiListItemTitleColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListItemSubtitle" parent="TextAppearance.FluentUI.Body1">
        <item name="android:textColor">?attr/fluentuiListItemSubtitleColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListItemFooter" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/fluentuiListItemFooterColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListItemTitle.LargeHeader" parent="TextAppearance.FluentUI.Title1">
        <item name="android:textColor">?attr/fluentuiListItemTitleColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListItemSubtitle.LargeHeader">
        <item name="android:textColor">?attr/fluentuiListItemSubtitleLargeHeaderColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListItemFooter.LargeHeader" parent="TextAppearance.FluentUI.Body1">
        <item name="android:textColor">?attr/fluentuiListItemFooterColor</item>
    </style>

    <!--ListSubHeader-->
    <style name="TextAppearance.FluentUI.ListSubHeaderTitle" parent="TextAppearance.FluentUI.Body2" />
    <style name="TextAppearance.FluentUI.ListSubHeaderTitle.Primary">
        <item name="android:textColor">?attr/fluentuiListSubHeaderTitlePrimaryColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListSubHeaderTitle.Secondary">
        <item name="android:textColor">?attr/fluentuiListSubHeaderTitleSecondaryColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ListSubHeaderTitle.Tertiary">
        <item name="android:textColor">?attr/fluentuiListSubHeaderTitleTertiaryColor</item>
    </style>

    <!--NumberPicker-->
    <style name="TextAppearance.FluentUI.NumberPicker" parent="TextAppearance.FluentUI.Heading"/>
    <style name="TextAppearance.FluentUI.NumberPicker.Selected">
        <item name="android:fontFamily">"sans-serif-medium"</item>
    </style>

    <!--PeoplePicker-->
    <style name="TextAppearance.FluentUI.PeoplePickerLabel" parent="TextAppearance.FluentUI.SubHeading1">
        <item name="android:textColor">?attr/fluentuiPeoplePickerLabelTextColor</item>
    </style>
    <style name="TextAppearance.FluentUI.PeoplePickerText" parent="TextAppearance.FluentUI.Heading" />
    <style name="TextAppearance.FluentUI.PeoplePickerCountSpan" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/fluentuiPeoplePickerCountSpanTextColor</item>
    </style>
    <style name="TextAppearance.FluentUI.PeoplePickerSearchDirectoryButton" parent="TextAppearance.FluentUI.Button.Borderless" />

    <!--PopupMenu-->
    <style name="TextAppearance.FluentUI.PopupMenuTitle" parent="TextAppearance.FluentUI.Body1" />

    <!--Snackbar-->
    <style name="TextAppearance.FluentUI.SnackbarText" parent="TextAppearance.FluentUI.Body1">
        <item name="android:textColor">?attr/fluentuiSnackbarTextColor</item>
    </style>

    <!--TabLayout-->
    <style name="TextAppearance.FluentUI.Tab.Light" parent="TextAppearance.FluentUI.Body2">
        <item name="android:textColor">?attr/fluentuiTabTextColor</item>
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!--Toolbar-->
    <style name="TextAppearance.FluentUI.ToolbarTitle" parent="TextAppearance.FluentUI.Title1">
        <item name="android:textColor">?attr/fluentuiToolbarTitleTextColor</item>
    </style>
    <style name="TextAppearance.FluentUI.ToolbarSubtitle" parent="TextAppearance.FluentUI.Caption">
        <item name="android:textColor">?attr/fluentuiToolbarSubtitleTextColor</item>
    </style>

    <!--Tooltip-->
    <style name="TextAppearance.FluentUI.Tooltip" parent="TextAppearance.FluentUI.Body2">
        <item name="android:textColor">?attr/fluentuiTooltipTextColor</item>
    </style>

</resources>