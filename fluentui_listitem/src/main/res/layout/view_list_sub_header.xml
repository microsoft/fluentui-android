<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/fluentui_list_sub_header_height"
    android:baselineAligned="true"
    android:gravity="center_vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="horizontal"
    android:paddingStart="@dimen/fluentui_list_item_horizontal_margin_regular">

    <TextView
        android:id="@+id/list_sub_header_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:maxLines="1"
        tools:text="Title" />

    <RelativeLayout
        android:id="@+id/list_sub_header_custom_accessory_view_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:visibility="gone" />

</LinearLayout>