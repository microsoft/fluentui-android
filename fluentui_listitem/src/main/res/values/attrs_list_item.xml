<resources>
    <declare-styleable name="FluentUIListItemView">
        <attr name="fluentuiListItemView_title" format="string" />
        <attr name="fluentuiListItemView_subtitle" format="string" />
        <attr name="fluentuiListItemView_footer" format="string" />
        <attr name="fluentuiListItemView_titleMaxLines" format="integer" />
        <attr name="fluentuiListItemView_subtitleMaxLines" format="integer" />
        <attr name="fluentuiListItemView_footerMaxLines" format="integer" />
        <attr name="fluentuiListItemView_titleTruncateAt" format="enum">
            <enum name="start" value="0" />
            <enum name="middle" value="1" />
            <enum name="end" value="2" />
            <enum name="marquee" value="3" />
        </attr>
        <attr name="fluentuiListItemView_subtitleTruncateAt" format="enum">
            <enum name="start" value="0" />
            <enum name="middle" value="1" />
            <enum name="end" value="2" />
            <enum name="marquee" value="3" />
        </attr>
        <attr name="fluentuiListItemView_footerTruncateAt" format="enum">
            <enum name="start" value="0" />
            <enum name="middle" value="1" />
            <enum name="end" value="2" />
            <enum name="marquee" value="3" />
        </attr>
        <attr name="fluentuiListItemView_layoutDensity" format="enum">
            <enum name="regular" value="0" />
            <enum name="dense" value="1" />
        </attr>
        <attr name="fluentuiListItemView_customViewSize" format="enum">
            <enum name="small" value="0" />
            <enum name="medium" value="1" />
            <enum name="large" value="2" />
        </attr>
    </declare-styleable>
</resources>