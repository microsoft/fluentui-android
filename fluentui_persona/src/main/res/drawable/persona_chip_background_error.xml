        <ripple android:color="?attr/fluentuiPersonaChipBackgroundPressedColor">
            <item android:id="@android:id/mask" android:drawable="@android:color/white" />
            <item>
                <shape>
                    <solid android:color="?attr/fluentuiPersonaChipBackgroundErrorColor" />
