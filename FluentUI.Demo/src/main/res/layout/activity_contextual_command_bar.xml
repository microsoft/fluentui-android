<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/fluentui_content_inset"
    tools:context=".demos.ContextualCommandBarActivity">

    <com.microsoft.fluentui.contextualcommandbar.ContextualCommandBar
        android:id="@+id/contextual_command_bar_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fluentui_content_inset" />

    <TextView
        style="@style/TextAppearance.DemoListItemSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fluentui_content_inset"
        android:layout_marginBottom="@dimen/fluentui_content_inset"
        android:gravity="center"
        android:text="@string/contextual_command_bar_style_default" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/fluentui_button_outlined_stroke_width"
        android:background="@color/fluentui_gray_50" />

    <com.microsoft.fluentui.contextualcommandbar.ContextualCommandBar
        android:id="@+id/contextual_command_bar_with_dismiss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fluentui_content_inset" />

    <TextView
        style="@style/TextAppearance.DemoListItemSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fluentui_content_inset"
        android:layout_marginBottom="@dimen/fluentui_content_inset"
        android:gravity="center"
        android:text="@string/contextual_command_bar_style_with_dismiss_button" />

</LinearLayout>