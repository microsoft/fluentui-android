<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="@dimen/fluentui_button_corner_radius" />
            <stroke
                android:width="@dimen/fluentui_button_outlined_stroke_width"
                android:color="?attr/FluentuiButtonOutlinedStrokeDisabledColor" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="@dimen/fluentui_button_corner_radius" />
            <stroke
                android:width="@dimen/fluentui_button_outlined_stroke_width"
                android:color="?attr/FluentuiButtonOutlinedStrokePressedColor" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="@dimen/fluentui_button_corner_radius" />
            <stroke
                android:width="@dimen/fluentui_button_outlined_stroke_width"
                android:color="?attr/fluentuiButtonOutlinedStrokeDefaultColor" />
        </shape>
    </item>
</selector>