<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="?attr/fluentuiButtonBackgroundDisabledColor"/>
            <corners android:radius="@dimen/fluentui_button_corner_radius" />
        </shape>
    </item>
    <item>
        <ripple android:color="?attr/fluentuiButtonBackgroundPressedColor">
            <item android:id="@android:id/mask" android:drawable="@android:color/white" />
            <item>
                <shape>
                    <solid android:color="?attr/fluentuiButtonBackgroundDefaultColor"/>
                    <corners android:radius="@dimen/fluentui_button_corner_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</selector>